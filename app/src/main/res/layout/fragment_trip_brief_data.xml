<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:gravity="top|center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/shape_oval_amber"
                android:layout_gravity="center"
                android:contentDescription="@string/image"
                android:layout_marginEnd="@dimen/_10sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="رقم كشف الرحلة"
                style="@style/Text_h6_r" />

            <TextView
                android:id="@+id/fragment_trip_brief_data_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2435"
                style="@style/Text_h5_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_ground_form"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/shape_oval_amber"
                android:layout_gravity="center"
                android:contentDescription="@string/image"
                android:layout_marginEnd="@dimen/_10sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="تاريخ ووقت الوصول"
                style="@style/Text_h6_r" />

            <TextView
                android:id="@+id/fragment_trip_brief_data_arrival_date_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-4-2022 , 3:40 PM"
                style="@style/Text_h5_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_ground_form"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/shape_oval_amber"
                android:layout_gravity="center"
                android:contentDescription="@string/image"
                android:layout_marginEnd="@dimen/_10sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="تاريخ ووقت المغادرة"
                style="@style/Text_h6_r" />

            <TextView
                android:id="@+id/fragment_trip_brief_data_departure_date_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-4-2022 , 3:40 PM"
                style="@style/Text_h5_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_ground_form"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/shape_oval_amber"
                android:layout_gravity="center"
                android:contentDescription="@string/image"
                android:layout_marginEnd="@dimen/_10sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="المرحلة الحالية"
                style="@style/Text_h6_r" />

            <TextView
                android:id="@+id/fragment_trip_brief_data_current_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مزارات - المسجد النبوي"
                style="@style/Text_h5_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_ground_form"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp" />

        <Button
            android:id="@+id/fragment_trip_brief_data_trip_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            style="@style/Button_amber"
            android:text="@string/view_all_trip_details"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

    </LinearLayout>
</layout>